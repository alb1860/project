@model List<Workshop>

@{
    ViewData["Title"] = "Participant Workshop Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h6 align="center">Workshops Details</h6>
@if (Model.Count > 0)
{
    <table class="table table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th>Workshop Name</th>
                <th>Workshop Facilitator First Name</th>
                <th>Workshop Facilitator Last Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.WorkshopName</td>
                    <td>@e.Facilitator.FName</td>
                    <td>@e.Facilitator.LName</td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No workshops to show at this time.</div>
}





