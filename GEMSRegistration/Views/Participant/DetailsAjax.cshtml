@model GEMSRegistration.Models.Participant


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
        function GetParticipantWorkshops(participantId) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("GetParticipantWorkshops","Participant")",
                data: { id : participantId },
                success: function (_ParticipantWorkshops)
                {
                    $("#pvWorkshops").html(_ParticipantWorkshops);
                },
                error: function ()
                {
                    alert("No workshops scheduled" + participantId);
                }
            });
        }
</script>
