@model GEMSRegistration.Models.Facilitator


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
        function GetFacilitatorWorkshops(facilitatorId) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("GetFacilitatorWorkshops","Facilitator")",
                data: { id : facilitatorId },
                success: function (_FacilitatorWorkshops)
                {
                    $("#pvWorkshopsFac").html(_FacilitatorWorkshops);
                },
                error: function ()
                {
                    alert("No workshops scheduled" + facilitatorId);
                }
            });
        }
</script>
